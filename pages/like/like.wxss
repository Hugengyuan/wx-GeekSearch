/* pages/history/history.wxss */

.mainContainer {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.ifnull{
  text-align: center;
  width: 100%;
  color: #b2b2b2;
}
.recordContainer {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.contentContainer{
  width: 92%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.dateContainer {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.date{
  margin-left: 10rpx;
  font-size: 14pt;
  color: #b2b2b2;
}

.imageContainer {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 模拟空元素 */

.imageContainer::after {
  content: '';
  flex: auto; /* 或者flex: 1 */
}

.recordimage {
  margin: 15rpx;
  height: 150rpx;
  width: 200rpx;
}

.image {
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
}
