/**index.wxss**/

/* 主轴是和排列方式相同的轴 */


.mainContainer{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.navigationBackground{
  width: 100%;
  border-bottom-left-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
}

.indicator-container{
  width: 80%;
  position: relative;
  bottom: 50rpx;
}

.slide-image {
	width: 100%;
  border-radius: 50rpx;
}

.content{
  width: 95%;
}

.selection{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
  position: relative;
  bottom: 50rpx;
}

.selection-item{
  width: 48%;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  
}

.selection-image{
  height: 160rpx;
  border-radius: 50rpx;
  box-shadow: 0px 2px 3px 3px rgba(136, 136, 136, 0.349);
}

